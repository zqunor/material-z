<article class="post reveal<%= (post.title) ? " " : "no-title " %>">
  <section class="meta">
    <% if (post.title) { %>
      <h2 class="title">
        <a href="<%- url_for(post.path) %>">
          <%= post.title %>
        </a>
      </h2>
      <% } %>
        <%- partial('categories',{post:post}) %>
          <time class="time">
            <%= date(post.date, 'M') %>月<br>
              <%= date(post.date, 'DD') %>
              <!-- <%= date(post.date, 'MMM D, YYYY') %> -->
          </time>
  </section>
  <section class="article typo">
    <span class="zhaiyao">[摘要]</span>

    <%- post.excerpt || post.content %>
      <% if (post.excerpt) { %>
        <div class="readmore">
          <a href="<%- url_for(post.path) %>">阅读全文</a>
        </div>
      <% } %>
      <% if (post.tags && post.tags.length) { %>
        <div class="full-width auto-padding tags">
          <% post.tags.each(function(item){ %>
            <a href="<%- url_for(item.path) %>">
              <span>
                <i class="icon icon-price-tags"></i>
              </span>
              <%=item.name %>
            </a>
          <%})%>
        </div>
      <% } %>
  </section>
</article>
