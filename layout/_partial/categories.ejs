<% if (post.categories && post.categories.length){ %>
    <%
    var cats = [];
    post.categories.forEach(function(cat){
        cats.push('<a href="'+url_for(cat.path)+'">' + cat.name + '</a>');
    });
    %>
    <div class='cats'>
        <i class="icon icon-folder-open"></i>
        <%- cats.join(', ') %>
    </div>
<% } %>